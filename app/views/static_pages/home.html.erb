<% content_for :body_class, t(".body_class") %>

<div class="page-header header-filter" data-parallax="true" style="background: url(<%= asset_path 'bg8.jpg' %>)">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1 class="title"><%= t ".msms" %></h1>
        <h4><%= t ".introduction" %></h4>
        <br>
        <%= link_to t(".get_started"), new_user_session_path, class: "btn btn-danger btn-raised btn-lg" %>
      </div>
    </div>
  </div>
</div>
<div class="main main-raised">
  <div class="container">
    <div class="section text-center">
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto">
          <h2 class="title"><%= t ".title" %></h2>
          <h5 class="description"><%= t ".detail" %></h5>
        </div>
      </div>
      <div class="features">
        <div class="row">
          <div class="col-md-4">
            <div class="info">
              <div class="icon icon-info">
                <i class="material-icons">chat</i>
              </div>
              <h4 class="info-title"><%= t ".free_chat" %></h4>
              <p><%= t ".detail_1" %></p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="info">
              <div class="icon icon-success">
                <i class="material-icons">verified_user</i>
              </div>
              <h4 class="info-title"><%= t ".verify" %></h4>
              <p><%= t ".detail_2" %></p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="info">
              <div class="icon icon-danger">
                <i class="material-icons">fingerprint</i>
              </div>
              <h4 class="info-title"><%= t ".fingerprint" %></h4>
              <p><%= t ".detail_3" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="section text-center">
      <h2 class="title"><%= t ".team" %></h2>
      <div class="team">
        <div class="row">
          <div class="col-md-6">
            <div class="card card-profile card-plain">
              <div class="row">
                <div class="col-md-5">
                  <div class="card-header card-header-image">
                    <%= image_tag("faces/cuong.jpg", alt: "Thumbnail Image", class: "img") %>
                  </div>
                </div>
                <div class="col-md-7">
                  <div class="card-body">
                    <h4 class="card-title"><%= t ".name_1" %></h4>
                    <h6 class="category text-muted"><%= t ".position_1" %></h6>
                    <p class="card-description">
                      <%= t ".quote_1" %>
                    </p>
                  </div>
                  <div class="card-footer justify-content-center">
                    <%= link_to "https://github.com/manhcuongdtbk", class: "btn btn-just-icon btn-link btn-github" do %>
                      <i class="fa fa-github"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card card-profile card-plain">
              <div class="row">
                <div class="col-md-5">
                  <div class="card-header card-header-image">
                    <%= image_tag("faces/thai.jpg", alt: "Thumbnail Image", class: "img") %>
                  </div>
                </div>
                <div class="col-md-7">
                  <div class="card-body">
                    <h4 class="card-title"><%= t ".name_2" %></h4>
                    <h6 class="category text-muted"><%= t ".position_2" %></h6>
                    <p class="card-description">
                      <%= t ".quote_2" %>
                    </p>
                  </div>
                  <div class="card-footer justify-content-center">
                    <%= link_to "https://github.com/dinhthai2206", class: "btn btn-just-icon btn-link btn-github" do %>
                      <i class="fa fa-github"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
